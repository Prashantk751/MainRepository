<main>
    <form class="product-form" action="/admin/{{#if editing}}edit-product{{else}}add-product{{/if}}" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="{{#if editing}}{{product.title}}{{/if}}">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl" value="{{#if editing}}{{product.imageUrl}}{{/if}}">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="{{#if editing}}{{product.price}}{{/if}}">
            <!--step is basically to get decimal inputs upto two places-->
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5">{{#if editing}}{{product.title}}{{/if}}</textarea>
        </div>
        {{#if editing}}
            <input type="hidden" value="{{product.id}}" name="productId">
        {{/if}}
        <button type="submit">{{#if editing}}Edit Product{{else}}Add Product{{/if}}</button>
    </form>
</main>