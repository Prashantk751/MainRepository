extends layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="style.css")
    
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR3Ob-0pmkFhPdOFC4YykH-14mbq5UK8VX9jhMbso0QKlIzB34f&s", alt="image")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products                 